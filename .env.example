# Environment Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
# PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_NAME=blocktrade_dev
DB_USER=postgres
DB_PASS=password

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# MongoDB
MONGO_URI=mongodb://localhost:27017/blocktrade

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-secret-key
JWT_REFRESH_EXPIRES_IN=30d

# Encryption
ENCRYPTION_KEY=your-32-character-encryption-key

# API Configuration
API_VERSION=v1
API_PREFIX=/api

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Blockchain Configuration
FABRIC_NETWORK_PATH=./fabric-network
FABRIC_USER_ID=admin
FABRIC_USER_PASSWORD=adminpw
FABRIC_CHANNEL_NAME=tradechannel
FABRIC_CHAINCODE_NAME=tradecontract

# External API Keys
KYC_API_KEY=your-kyc-provider-api-key
SANCTIONS_API_KEY=your-sanctions-screening-api-key
SWIFT_API_KEY=your-swift-api-key

# Logging
LOG_LEVEL=debug
LOG_FILE=logs/app.log

# Security
CORS_ORIGIN=http://localhost:4201
ALLOWED_ORIGINS=http://localhost:4201,http://localhost:3000

# Development flags
ENABLE_SWAGGER=true
ENABLE_MORGAN_LOGGING=true
