{
  "name": "blocktrade-backend",
  "version": "1.0.0",
  "description": "BlockTrade Backend API - Blockchain-based Trade Finance Platform",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "nodemon src/server.ts",
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:auth": "ts-node src/utils/authTester.ts",
    "test:simple": "ts-node src/utils/simpleTest.ts",
    "test:db": "node test-mongodb-connection.js",
    "seed": "ts-node src/utils/dataSeeder.ts",
    "seed:clear": "ts-node src/utils/dataSeeder.ts --clear",
    "db:setup": "chmod +x setup-mongodb.sh && ./setup-mongodb.sh",
    "db:start": "docker start mongodb",
    "db:stop": "docker stop mongodb",
    "db:restart": "docker restart mongodb",
    "db:logs": "docker logs mongodb",
    "db:shell": "docker exec -it mongodb mongosh -u admin -p password --authenticationDatabase admin",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix"
  },
  "keywords": [
    "blockchain",
    "trade-finance",
    "letter-of-credit",
    "typescript",
    "express"
  ],
  "author": "BlockTrade Team",
  "license": "MIT",
  "dependencies": {
    "@types/nodemailer": "^7.0.3",
    "@types/uuid": "^10.0.0",
    "axios": "^1.13.1",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.1",
    "helmet": "^7.1.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.20.0",
    "mongoose": "^8.19.2",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.15.3",
    "nodemailer": "^7.0.10",
    "pg": "^8.11.3",
    "redis": "^4.6.10",
    "swagger-ui-express": "^5.0.0",
    "uuid": "^13.0.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.9.0",
    "@types/pg": "^8.10.7",
    "@types/swagger-ui-express": "^4.1.6",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
